{
  "manifest_version": 3,
  "name": "UM GWA Calculator",
  "version": "1.0.0",
  "description": "Automatically calculate your General Weighted Average (GWA) from the University of Mindanao SPR webpage",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/um_icon_16.png",
      "48": "icons/um_icon_48.png",
      "128": "icons/um_icon_128.png"
    }
  },
  "icons": {
    "16": "icons/um_icon_16.png",
    "48": "icons/um_icon_48.png",
    "128": "icons/um_icon_128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://student.umindanao.edu.ph/student/spr"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.umindanao.edu.ph/*"
  ]
}
